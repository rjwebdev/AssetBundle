<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="RoyVanGinneken\DynamicAssetIncludeBundle\Services\AssetService" public="false">
            <argument type="service" id="request_stack" />
            <argument type="service" id="RoyVanGinneken\DynamicAssetIncludeBundle\Services\CacheService" />
            <argument>%kernel.root_dir%/../web/</argument>
        </service>
        <service id="RoyVanGinneken\DynamicAssetIncludeBundle\Services\CacheService" public="false">
            <argument type="service" id="Psr\Cache\CacheItemPoolInterface" />
            <argument>%kernel.environment%</argument>
        </service>
        <service id="roy_van_ginneken.dynamic_asset_include.asset_extension" class="RoyVanGinneken\DynamicAssetIncludeBundle\Twig\AssetExtension" public="false">
            <argument type="service" id="RoyVanGinneken\DynamicAssetIncludeBundle\Services\AssetService" />
            <tag name="twig.extension" />
        </service>
        <service id="roy_van_ginneken.dynamic_asset_include.kernel_response_listener" class="RoyVanGinneken\DynamicAssetIncludeBundle\Listener\KernelResponseListener" public="false">
            <argument type="service" id="RoyVanGinneken\DynamicAssetIncludeBundle\Services\AssetService" />
            <tag name="kernel.event_listener" event="kernel.response" priority="-127" />
        </service>
    </services>
</container>
